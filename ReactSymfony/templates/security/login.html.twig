{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		{#
						        {% if app.user %}
						            <div class="mb-3">
						                You are logged in as {{ app.user.userIdentifier }},
						                <a href="{{ path('app_logout') }}">Logout</a>
						            </div>
						        {% endif %}
						        #}

		<a href="{{ path('app_home') }}">home</a>
		<div class="Register__container">
			<div class="wrapper">
				<div class="Registration__container">
					<div class="Registeration__form">
						<div class="Registeration__header">
							<h1 class="Registeration_">Login to your account</h1>
						</div>
						<div class="input-box">
							<input placeholder="Username" type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus/>
						</div>

						<div class="input-box">
							<input class="input" placeholder="Password" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required/>
						</div>
						<input class="input"type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="register-link">
                        <p>Don't have an account? </p> <a href={{ path('app_register') }}>Register </a>
                    	</div>
						<div class="flex-container">
							<button type="submit" class="btn">Log-in</button>
						</div>
					</div>
				</form>

			</div>
		</div>
	</form>
	{# <button class="btn btn-lg btn-primary">Sign in
				<a href="{{ path('app_register') }}" class="btn btn-primary">create account</a>
		</button> #}
{% endblock %}
